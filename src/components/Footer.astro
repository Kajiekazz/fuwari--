---
import { profileConfig } from "../config";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();
---

<!-- 分割线 -->
<div class="transition border-t border-black/10 dark:border-white/15 my-10 border-dashed mx-32"></div>

<!-- 页脚主体 -->
<div class="transition border-dashed border-[oklch(85%_0.01_var(--hue))] dark:border-white/15 rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    
    <!-- 原有的版权信息 -->
    <div class="transition text-50 text-sm text-center">
        &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}. All Rights Reserved. /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('rss.xml')}>RSS</a> /
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href={url('sitemap-index.xml')}>Sitemap</a><br>
        Powered by
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://astro.build">Astro</a> &
        <a class="transition link text-[var(--primary)] font-medium" target="_blank" href="https://github.com/saicaca/fuwari">Fuwari</a>
    </div>

    <!-- 新增：萌ICP备 (美化版) -->
    <div class="mt-3 flex justify-center">
        <a href="https://icp.gov.moe/?keyword=20250940" target="_blank" rel="noopener noreferrer"
           class="group flex items-center gap-2 px-3 py-1.5 rounded-full 
                  bg-pink-50/80 dark:bg-pink-950/20 
                  border border-pink-200 dark:border-pink-800/50
                  hover:bg-pink-100 dark:hover:bg-pink-900/40 hover:border-pink-300 dark:hover:border-pink-700
                  hover:scale-105 active:scale-95
                  transition-all duration-300 ease-in-out">
            
            <!-- 呼吸灯小圆点 -->
            <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-pink-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-pink-500"></span>
            </span>
            
            <!-- 文字 -->
            <span class="text-xs font-medium text-pink-500 dark:text-pink-300 group-hover:text-pink-600 dark:group-hover:text-pink-200 transition-colors">
                萌ICP备20250940号
            </span>
        </a>
    </div>

</div>